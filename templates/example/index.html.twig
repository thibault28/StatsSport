{% extends 'base.html.twig' %}

{% block title %}Hello ExampleController!{% endblock %}

{% block body %}

<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <tbody>

        {% for example in examples %}
        <tr>
          <th scope="row">{{example.id}} </th>
          <td>{{example.name}} </td>
        </tr>
        {% endfor %}

    </tbody>
  </table>
  <div class="pagination">
    {{ knp_pagination_render(examples) }}
</div>

{% endblock %}
